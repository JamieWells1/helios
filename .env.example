# Solana Trading Bot Configuration

# Solana RPC Configuration
# Use a reliable RPC provider (e.g., Helius, QuickNode, or public endpoint)
# For devnet testing: https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com or your paid RPC provider
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet Configuration
# IMPORTANT: Keep this secret! Never commit to version control
# Format: Base58 encoded private key array (from Phantom/Solflare export)
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Token Addresses
# The SOL token mint address (native SOL wrapper)
SOL_MINT=So11111111111111111111111111111111111111112
# USDC token mint address on Solana mainnet
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Data Source Configuration
USE_OHLC_DATA=false

# CryptoCompare API (for historical data on startup)
CRYPTOCOMPARE_BASE_URL=https://min-api.cryptocompare.com/data/v2
CRYPTOCOMPARE_API_KEY=
# Leave empty for free tier (100k calls/month)
# Get key at: https://min-api.cryptocompare.com/

# GeckoTerminal API (for runtime price updates)
GECKOTERMINAL_BASE_URL=https://api.geckoterminal.com/api/v2

# Jupiter API (for DEX swap execution)
# Public endpoint (free, rate-limited)
JUPITER_QUOTE_API=https://public.jupiterapi.com/quote
JUPITER_SWAP_API=https://public.jupiterapi.com/swap
# For production, consider QuickNode: https://jupiter-swap-api.quiknode.pro/YOUR_ENDPOINT/quote

# OHLC Data Fetching
# Startup: Large historical dataset from CryptoCompare
OHLC_STARTUP_TIMEFRAME=1m
OHLC_STARTUP_LIMIT=10000

# Runtime: Recent candles from GeckoTerminal (updated every CHECK_INTERVAL_SECONDS)
OHLC_RUNTIME_TIMEFRAME=1m
OHLC_RUNTIME_LIMIT=5

# Trading Configuration
# Amount of USDC to use per trade (e.g., 100 means $100 USDC per trade)
POSITION_SIZE_USDC=100

# Maximum position size as a safety limit (in USDC)
MAX_POSITION_SIZE_USDC=1000

# Slippage Tolerance
# Maximum acceptable slippage as a percentage (e.g., 1.0 means 1%)
# Lower values = better execution price but higher chance of failed trades
# Higher values = more likely to execute but worse prices
MAX_SLIPPAGE_PERCENT=1.0

# Trading Loop Interval
# How often to check prices and evaluate strategy (in seconds)
# Lower = more responsive but higher RPC costs
# Recommended: 5-30 seconds for intraday trading
CHECK_INTERVAL_SECONDS=10

# API Retry Configuration
# Retry attempts for failed API calls
MAX_RETRIES=3
# Initial retry delay in seconds (will increase exponentially)
RETRY_DELAY_SECONDS=1
# Maximum retry delay in seconds
MAX_RETRY_DELAY_SECONDS=60

# Price Feed Configuration
# Enable/disable specific price sources (true/false)
USE_COINGECKO=true
USE_JUPITER=true
# Cache duration for price data in seconds
PRICE_CACHE_SECONDS=5

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Maximum log file size in bytes (10MB default)
MAX_LOG_SIZE_BYTES=10485760
# Number of backup log files to keep
LOG_BACKUP_COUNT=5
